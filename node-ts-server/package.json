{
	"name": "node-ts-server",
	"version": "1.0.0",
	"author": "Patrick Charriere",
	"license": "MIT",
	"description": "Simple node server using Typescript and express",
	"keywords": [],
	"main": "index.js",
	"watch": {
		"lint": "",
		"test": ""
	},
	"scripts": {
		"prestart": "node dist/startMessage.js",
		"start": "npm-run-all --parallel security-check start:watch lint:watch test:watch",
		"start:watch": "nodemon dist/**/*.js",

		"test": "mocha --reporter progress --require ts-node/register '**/*.spec.ts' --exit",
		"test:watch": "npm-watch test",

		"security-check": "nsp check",

		"localtunnel": "lt --port 3000",
		"share": "npm-run-all --parallel launch-server localtunnel",

		"lint": "tslint -c tslint.json 'src/**/*.ts' --force",
		"lint:watch": "npm-watch lint"
	},
	"devDependencies": {
		"@types/body-parser": "^1.16.5",
		"@types/chai": "^4.0.4",
		"@types/chai-http": "^3.0.3",
		"@types/chalk": "^0.4.31",
		"@types/debug": "^0.0.30",
		"@types/express": "^4.0.37",
		"@types/mocha": "^2.2.43",
		"@types/morgan": "^1.7.33",
		"@types/node": "^8.0.31",
		"chai": "^4.1.2",
		"chai-http": "^3.0.0",
		"child_process": "^1.0.2",
		"mocha": "^4.0.0",
		"npm-watch": "^0.3.0",
		"ts-node": "^3.3.0",
		"tslint": "^5.7.0",
		"typescript": "^2.5.3"
	},
	"dependencies": {
		"body-parser": "^1.18.2",
		"chalk": "^2.1.0",
		"debug": "^3.1.0",
		"express": "^4.16.1",
		"morgan": "^1.9.0",
		"node-webcam": "^0.4.3",
		"nsp": "^2.8.1"
	}
}
